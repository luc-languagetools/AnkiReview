<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardstyle_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    >


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/review_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <LinearLayout
                android:id="@+id/cardstyle_editor_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/questioncard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/answercard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <View style="@style/Divider" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/md_white"
            android:elevation="32dp">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/cardstyle_editor_all_fields"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

            <FrameLayout
                android:id="@+id/cardstyle_editor_fieldsettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/CardStyleItem"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/CardStyleItemText"
                                android:text="Select Field"
                                android:layout_weight="1"
                                />

                            <Spinner
                                android:id="@+id/cardstyle_field_settings_selector"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                style="@style/CardStyleItemText"
                                android:layout_gravity="right"
                                />

                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:id="@+id/cardstyle_field_color_selector"
                            style="@style/CardStyleItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/CardStyleItemText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Text Color" />

                            <ImageView
                                android:id="@+id/cardstyle_field_color_circle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="3"
                                android:src="@drawable/cardstyle_color_circle"
                                tools:src="@drawable/cardstyle_color_circle">

                            </ImageView>

                        </LinearLayout>

                        <View style="@style/Divider" />

                        <com.luc.ankireview.style.ValueSlider
                            android:id="@+id/cardstyle_text_relativesize_valueslider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:maxValue="40"
                            app:minValue="0"
                            app:titleText="Relative Text Size" />

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/CardStyleItem"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/CardStyleItemText"
                                android:text="Alignment"
                                android:layout_weight="1"
                                />

                            <Spinner
                                android:id="@+id/cardstyle_field_alignment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                style="@style/CardStyleItemText"
                                />

                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/CardStyleItem"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                style="@style/CardStyleItemText"
                                android:text="Line Return"/>

                            <CheckBox
                                android:id="@+id/cardstyle_field_linereturn"
                                style="@style/CardStyleCheckBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3" />

                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/CardStyleItem"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                style="@style/CardStyleItemText"
                                android:text="HTML Content"/>

                            <CheckBox
                                android:id="@+id/cardstyle_field_html"
                                style="@style/CardStyleCheckBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="4" />

                        </LinearLayout>

                        <View style="@style/Divider" />

                        <com.luc.ankireview.style.ValueSlider
                            android:id="@+id/cardstyle_field_leftmargin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:maxValue="80"
                            app:minValue="0"
                            app:titleText="Left Margin" />




                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cardstyle_editor_font"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardStyleHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Font" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/cardstyle_editor_font_family"
                            style="@style/CardStyleHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="Font Family" />

                        <Button
                            android:id="@+id/cardstyle_editor_font_lookup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lookup" />

                    </LinearLayout>

                    <View style="@style/Divider" />

                    <com.luc.ankireview.style.ValueSlider
                        android:id="@+id/cardstyle_text_basesize_valueslider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:maxValue="100"
                        app:minValue="10"
                        app:titleText="Base Text Size" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cardstyle_editor_margins"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.luc.ankireview.style.ValueSlider
                            android:id="@+id/cardstyle_margin_leftright_valueslider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:maxValue="120"
                            app:minValue="0"
                            app:titleText="Left/Right Margin" />

                        <View style="@style/Divider" />

                        <com.luc.ankireview.style.ValueSlider
                            android:id="@+id/cardstyle_margin_between_valueslider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:maxValue="80"
                            app:minValue="0"
                            app:titleText="Between Margin" />

                        <View style="@style/Divider" />

                        <com.luc.ankireview.style.ValueSlider
                            android:id="@+id/cardstyle_padding_top_valueslider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:maxValue="80"
                            app:minValue="0"
                            app:titleText="Padding Top" />

                        <View style="@style/Divider" />

                        <com.luc.ankireview.style.ValueSlider
                            android:id="@+id/cardstyle_padding_bottom_valueslider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:maxValue="80"
                            app:minValue="0"
                            app:titleText="Padding Bottom" />

                        <View style="@style/Divider" />

                        <com.luc.ankireview.style.ValueSlider
                            android:id="@+id/cardstyle_padding_leftright_valueslider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:maxValue="100"
                            app:minValue="0"
                            app:titleText="Padding Left/Right" />


                    </LinearLayout>
                </ScrollView>
            </FrameLayout>


        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/cardstyle_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/cardstyle_bottom_menu"/>


    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>