<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    app:layoutDescription="@xml/reviewer_motionscene_teachermode"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <com.luc.ankireview.DynamicHeightImageView
        android:id="@+id/background_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop">
    </com.luc.ankireview.DynamicHeightImageView>

    <com.luc.ankireview.DynamicHeightImageView
        android:id="@+id/teacher_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        android:transformPivotY="0dp"
    >
    </com.luc.ankireview.DynamicHeightImageView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/teacher_photo_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_percent="0.36"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/question_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="teacher_photo_top_guideline, question_card" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/next_question_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="teacher_photo_top_guideline, next_question_card" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/answer_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="teacher_photo_top_guideline, answer_card" />

    <include
        android:id="@+id/next_question_card"
        layout="@layout/side_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/answer_card"
        layout="@layout/side_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/question_card"
        layout="@layout/side_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/answer_notification_good"
        layout="@layout/answer_animation_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/answer_notification_bad"
        layout="@layout/answer_animation_bad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.motion.widget.MotionLayout>