<resources>

    <!-- material color palette -->
    <!-- https://material.io/design/color/the-color-system.html#tools-for-picking-colors -->

    <!-- Base application theme. -->
    <!-- https://medium.com/androiddevelopers/android-styling-common-theme-attributes-8f7c50c9eaba -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_blue_700</item>
        <item name="colorPrimaryDark">@color/md_blue_700</item>

        <item name="colorSecondary">@color/md_pink_500</item>
        <item name="colorOnSecondary">@color/md_white</item>

        <item name="android:colorBackground">@color/md_grey_300</item>

        <item name="android:shadowColor">@color/md_black</item>

        <!-- Toolbar -->
        <item name="android:textColorSecondary">@color/md_grey_500</item>
        <item name="titleTextColor">@color/md_white</item>
        <item name="subtitleTextColor">@color/md_white</item>



    </style>


    <!-- Deck Picker styles -->
    <style name="DeckPickerDeckName">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/md_blue_700</item>
    </style>

    <style name="DeckPickerDeckCounts">
        <item name="android:textSize">18dp</item>
    </style>


    <style name="OptionHeader" parent="CardStyleFieldListItem">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CardStyleItem">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CardStyleItemText">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="CardStyleItemTextHeavy" parent="CardStyleItemText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CardStyleHeader">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="CardStyleFieldListItem">
        <item name="android:textSize">25dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="CardStyleFieldListSectionHeader" parent="CardStyleFieldListItem">
        <!-- <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
         -->
    </style>

    <style name="CardStyleFieldListSectionDescription" parent="CardStyleFieldListItem">
        <item name="android:textSize">14dp</item>
        <!--
        <item name="android:background">@color/md_grey_300</item>
        <item name="android:textColor">@color/md_grey_800</item>
        -->
    </style>

    <style name="CardStyleFieldListField" parent="CardStyleFieldListItem">
    </style>


    <style name="CardStyleFieldListFieldName" parent="CardStyleFieldListItem">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CardStyleValueSlider" parent="CardStyleItem" >
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="CardStyleCheckBox" parent="CardStyleItem" >
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layoutDirection">rtl</item>
    </style>
    c

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
