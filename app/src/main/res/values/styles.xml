<resources>

    <!-- material color palette -->
    <!-- https://material.io/design/color/the-color-system.html#tools-for-picking-colors -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_blue_700</item>
        <item name="colorPrimaryDark">@color/md_blue_900</item>
        <item name="colorAccent">@color/md_pink_500</item>

        <item name="background">@color/md_grey_300</item>

        <item name="android:shadowColor">@color/md_black</item>

        <!-- Toolbar -->
        <item name="android:textColorSecondary">@color/md_white</item>
        <item name="titleTextColor">@color/md_white</item>
        <item name="subtitleTextColor">@color/md_white</item>


    </style>

    <style name="CardStyleItem">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CardStyleItemText">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="CardStyleHeader">
        <item name="android:textSize">25dp</item>
    </style>

    <!-- https://stackoverflow.com/questions/30754203/tablayout-tab-style -->
    <style name="CardStyleTabLayout">
        <item name="android:textSize">25dp</item>
        <!-- <item name="tabPaddingBottom">10dp</item> -->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
