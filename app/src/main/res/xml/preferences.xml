<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="audio"
        app:title="Audio">

        <SwitchPreferenceCompat
            app:key="audio_feedback"
            app:title="Audio feedback during review"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="display"
        app:title="Display">

        <SwitchPreferenceCompat
            app:key="force_dark_mode"
            app:title="Force Dark Mode"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="experimental"
        app:title="Experimental">


        <SwitchPreferenceCompat
            app:key="teacher_mode"
            app:title="Enable Teacher Mode"
            android:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="backgrounds"
            app:title="Enable Backgrounds"
            android:defaultValue="false" />

        <ListPreference
            android:key="background_set"
            android:title="Background Set"
            android:entries="@array/backgrounds_sets_names"
            android:entryValues="@array/backgrounds_sets_values"
            android:summary="Choose a background set"
            />

        <ListPreference
            android:key="teacher_set"
            android:title="Teacher Set"
            android:entries="@array/teacher_sets_names"
            android:entryValues="@array/teacher_sets_values"
            android:summary="Choose a teacher set"
            />

    </PreferenceCategory>

</PreferenceScreen>