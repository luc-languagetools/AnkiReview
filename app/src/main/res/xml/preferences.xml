<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="audio"
        app:title="Audio">

        <SwitchPreferenceCompat
            app:key="audio_feedback"
            app:title="Audio feedback during review"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="display"
        app:title="Display">

        <SwitchPreferenceCompat
            app:key="force_dark_mode"
            app:title="Force Dark Mode"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="experimental"
        app:title="Experimental">


        <SwitchPreferenceCompat
            app:key="teacher_mode"
            app:title="Enable Teacher Mode"
            android:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="backgrounds"
            app:title="Enable Backgrounds"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>